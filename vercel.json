{
  "version": 2,
  "buildCommand": "node vercel-build.js && npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "functions": {
    "api/profiles.js": {
      "includeFiles": "api/data/**"
    },
    "api/profiles/[id].js": {
      "includeFiles": "api/data/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
